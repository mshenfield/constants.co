doctype html
html(lang="en-US", ng-app="constantsCo")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Constants.co
    link(rel="stylesheet", href="lib/build.css")
    link(rel="stylesheet", href="css/main.css")
  body
    .container(ng-controller='Main as main')
      h1 CONSTANTS.CO
      .col-md-10.col-md-offset-1
        .searchAndResults
          .results
            h2 QUANTITY {{main.constantsObject.Quantity}}
            h2 VALUE {{main.constantsObject.Value}}
            h2 UNCERTAINTY {{main.constantsObject.Uncertainty}}
            h2 UNIT {{main.constantsObject.Unit}}
          form.input-group(ng-submit='main.getConstant()')
            input.form-control(placeholder='Search...', ng-model='query')
        .allData
          table.table.table-hover
            tr
              th QUANTITY
              th VALUE
            tr(ng-repeat="constant in main.constantsObject | filter : query")
              td: a(href='https://en.wikipedia.org/wiki/Special:Search/{{constant.Quantity}}') {{constant.Quantity}}
              td {{constant.Value}} {{constant.Unit}}
    script(src="lib/build.js")
    script(src="js/main.js")
